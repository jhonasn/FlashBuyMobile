<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.ponkandigital" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>FlashBuy</name>
  <description>
    O maior FlashMob de compras do Brasil!
  </description>
  <author email="jhonasn@gmail.com" href="http://ponkan-digital.com.br">
    Time Ponkan Digital
  </author>

  <content src="index.html" />

  <plugin name="cordova-plugin-whitelist" spec="1" />
 <access origin="http://189.16.45.2" /> />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <allow-navigation href="http://189.16.45.2/*" />
  <allow-navigation href="http://172.16.10.251/*" />

  <hook type="before_build" src="hooks/before_device.js" />
  <hook type="before_compile" src="hooks/before_device.js" />
  <hook type="before_emulate" src="hooks/before_device.js" />
  <hook type="before_run" src="hooks/before_device.js" />

  <hook type="after_build" src="hooks/after_device.js" />
  <hook type="after_compile" src="hooks/after_device.js" />
  <hook type="after_emulate" src="hooks/after_device.js" />
  <hook type="after_run" src="hooks/after_device.js" />

  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
</widget>
